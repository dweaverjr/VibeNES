{
    "tasks": [
        {
            "type": "shell",
            "label": "Debug Build",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build_scripts/compile_debug.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debug build with GUI support - auto-discovers all source files"
        },
        {
            "type": "shell",
            "label": "Release Build",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build_scripts/compile_release.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Optimized release build - auto-discovers all source files"
        },
        {
            "type": "shell",
            "label": "Build Tests",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build_scripts/compile_tests.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build all unit tests - auto-discovers test and source files"
        },
        {
            "type": "shell",
            "label": "Create Build Directories",
            "command": "powershell",
            "args": [
                "-Command",
                "New-Item -ItemType Directory -Force -Path '${workspaceFolder}/build/debug', '${workspaceFolder}/build/release'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Create necessary build directories"
        },
        {
            "type": "shell",
            "label": "Run Debug",
            "command": "${workspaceFolder}/build/debug/VibeNES_GUI.exe",
            "group": "test",
            "dependsOn": "Debug Build",
            "detail": "Build and run debug version with GUI"
        },
        {
            "type": "shell",
            "label": "Run Debug (No Build)",
            "command": "${workspaceFolder}/build/debug/VibeNES_GUI.exe",
            "group": "test",
            "detail": "Run debug version with GUI without building"
        },
        {
            "type": "shell",
            "label": "Build Tests",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build_scripts/compile_tests.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build all unit tests - auto-discovers test and source files"
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "command": "${workspaceFolder}/build/debug/VibeNES_All_Tests.exe",
            "group": "test",
            "detail": "Run all unit tests"
        }
    ],
    "version": "2.0.0"
}
