{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug Build",
            "command": "c:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "-O0",
                "-pedantic-errors",
                "-Werror",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wshadow",
                "-Wformat=2",
                "-std=c++23",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/core/bus.cpp",
                "${workspaceFolder}/src/cpu/cpu_6502.cpp",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/build/debug/VibeNES.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debug build with full optimization disabled and debug symbols"
        },
        {
            "type": "cppbuild",
            "label": "Release Build",
            "command": "c:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O3",
                "-DNDEBUG",
                "-march=native",
                "-flto",
                "-pedantic-errors",
                "-Werror",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "-std=c++23",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/core/bus.cpp",
                "${workspaceFolder}/src/cpu/cpu_6502.cpp",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/build/release/VibeNES.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Optimized release build for performance"
        },
        {
            "type": "shell",
            "label": "Create Build Directories",
            "command": "powershell",
            "args": [
                "-Command",
                "New-Item -ItemType Directory -Force -Path '${workspaceFolder}/build/debug', '${workspaceFolder}/build/release'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Create necessary build directories"
        },
        {
            "type": "shell",
            "label": "Run Debug",
            "command": "${workspaceFolder}/build/debug/VibeNES.exe",
            "group": "test",
            "dependsOn": "Debug Build",
            "detail": "Build and run debug version"
        },
        {
            "type": "cppbuild",
            "label": "Build Tests",
            "command": "c:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "-O0",
                "-std=c++23",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "${workspaceFolder}/tests/test_main.cpp",
                "${workspaceFolder}/tests/catch2/catch_amalgamated.cpp",
                "${workspaceFolder}/tests/core/test_types.cpp",
                "${workspaceFolder}/tests/memory/test_ram.cpp",
                "${workspaceFolder}/tests/core/test_bus.cpp",
                "${workspaceFolder}/tests/cpu/test_cpu_6502.cpp",
                "${workspaceFolder}/tests/cpu/instruction_tests.cpp",
                "${workspaceFolder}/tests/cpu/timing_tests.cpp",
                "${workspaceFolder}/tests/cpu/nestest_validation.cpp",
                "${workspaceFolder}/tests/cpu/undocumented_opcodes_tests.cpp",
                "${workspaceFolder}/src/core/bus.cpp",
                "${workspaceFolder}/src/cpu/cpu_6502.cpp",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/tests",
                "-o",
                "${workspaceFolder}/build/debug/VibeNES_All_Tests.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build all unit tests including CPU tests with Catch2 framework. NOTE: Add new test and source .cpp files to the args list when created (exclude main.cpp from src)"
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "command": "${workspaceFolder}/build/debug/VibeNES_All_Tests.exe",
            "group": "test",
            "dependsOn": "Build Tests",
            "detail": "Build and run all unit tests"
        },
        {
            "type": "shell",
            "label": "Run Tests Verbose",
            "command": "${workspaceFolder}/build/debug/VibeNES_All_Tests.exe",
            "args": [
                "-s",
                "--use-colour",
                "yes"
            ],
            "group": "test",
            "dependsOn": "Build Tests",
            "detail": "Build and run all unit tests with verbose output"
        }
    ],
    "version": "2.0.0"
}
